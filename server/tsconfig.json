{
	"compilerOptions": {
		"outDir": "./dist",
		"allowJs": false,
		"target": "es6",
		"sourceMap": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"declaration": true,
		"declarationDir": "./dist/types"
	},
	"include": ["./src/**/*"]
}
